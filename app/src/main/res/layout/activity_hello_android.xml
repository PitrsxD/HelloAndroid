<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#01B4E5"
    tools:context="com.svobodapeter.helloandroid.HelloAndroid">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/udacityheader" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="52dp"
        android:text="Udacity"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="18dp"/>

    <RelativeLayout
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:src="@mipmap/addresspic" />

        <TextView
            android:id="@+id/address1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="52dp"
            android:text="2465 Latham St"
            android:textColor="#ffffff" />


        <TextView
            android:id="@+id/url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/address1"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="52dp"
            android:text="Mountain View, CA 94043"
            android:textColor="#ffffff" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/address"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:src="@mipmap/phonepic2" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:text="Call"
            android:textColor="#0088a8"
            android:background="#66d2f0"
            android:onClick="button1"/>

        <TextView
            android:id="@+id/phone1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="52dp"
            android:text="650-555-5555"
            android:textColor="#ffffff" />


        <TextView
            android:id="@+id/webUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone1"
            android:layout_marginBottom="18dp"
            android:layout_marginStart="52dp"
            android:text="www.udacity.com"
            android:textColor="#ffffff" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:src="@mipmap/descriptionpic" />

        <TextView
            android:id="@+id/description1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="52dp"
            android:text="Udacity is where lifelong learners come to learn the skills they need, to land the jobs they want, to build the lives they deserve."
            android:layout_marginEnd="10dp"
            android:textColor="#ffffff" />

    </RelativeLayout>

</RelativeLayout>
